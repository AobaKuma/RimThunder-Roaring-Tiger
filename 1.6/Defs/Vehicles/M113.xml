<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <Vehicles.VehicleBuildDef ParentName="RT_BaseVehicleBuild"><!-- 建築型態的載具，基本上與BuildingDef相同-->
		<defName>RT_M113_APC_Blueprint</defName>
		<label>M113 APC</label>
		<description>An armoured personal carrier for armed transport, it's common to see in foreign military sales world wide, equipped a 12.7mm machine gun.</description>
		<graphicData>
			<texPath>Vehicles/M113/vehicle</texPath>
			<drawSize>(7,7)</drawSize>
		</graphicData>	
		<statBases> 		
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>20000</WorkToBuild>
			<Flammability>0.05</Flammability>
		</statBases>
		<size>(3,4)</size>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>	
		<costList>
			<EngineMedium>1</EngineMedium>
			<ComponentFuelTank>1</ComponentFuelTank>
			<ComponentTransmission>1</ComponentTransmission>
			<ComponentWheelRoad>10</ComponentWheelRoad>
			<ComponentIndustrial>12</ComponentIndustrial>
			<Steel>150</Steel>
		</costList>
		<thingToSpawn>RT_M113_APC</thingToSpawn>	<!-- 建造後生成的載具Kind,這是與建築唯一不一樣的-->
	</Vehicles.VehicleBuildDef>

	<!-- 載具本體 -->
	<Vehicles.VehicleDef ParentName="RT_BaseVehicle">
		<defName>RT_M113_APC</defName>
		<label>M113 APC</label>
		<description>An armoured personal carrier for armed transport, it's common to see in foreign military sales world wide, equipped a 12.7mm machine gun.</description>
		<buildDef>RT_M113_APC_Blueprint</buildDef>
		<thingClass>Motorization.VehiclePawn_Tractor</thingClass>
		<graphicData>
			<texPath>Vehicles/M113/vehicle</texPath>
			<drawSize>(7,7)</drawSize>
		</graphicData>
		<size>(3,4)</size>
		<fillPercent>1</fillPercent>
		<vehicleCategory>Combat</vehicleCategory>
		<statBases>
			<ArmorRating_Blunt>0.92</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.40</ArmorRating_Sharp>
			<Flammability>0</Flammability>
			<MarketValue>2240</MarketValue>
		</statBases>
		<vehicleStats>
			<Mass>800</Mass>
			<MoveSpeed>7</MoveSpeed>
			<CargoCapacity>1600</CargoCapacity>
			<RepairRate>0.5</RepairRate>
		</vehicleStats>
		<soundOneShotsOnEvent Inherit = "False">
			<li>
				<key>PawnEntered</key>
				<value>VVE_VehicleEnter</value>
			</li>
			<li>
				<key>PawnExited</key>
				<value>VVE_VehicleEnter</value>
			</li>
			<li>
				<key>IgnitionOn</key>
				<value>RT_BMPVehicleStart</value>
			</li>
			<li>
				<key>IgnitionOff</key>
				<value>RT_BMPVehicleStop</value>
			</li>
		</soundOneShotsOnEvent>
		<soundSustainersOnEvent Inherit="false"> 
			<li>
				<start>IgnitionOn</start>
				<stop>IgnitionOff</stop>
				<value>RT_BMPVehicleEngine</value>
			</li>
		</soundSustainersOnEvent>
		<race>
			<baseBodySize>4</baseBodySize>
		</race>	
		<properties>	<!-- 座位與功能 -->
			<customRoadCosts AssignDefaults = "0.4"/>
			<worldSpeedMultiplier>1.0</worldSpeedMultiplier>
			<winterSpeedMultiplier>1.0</winterSpeedMultiplier>
			<customHillinessCosts>
				<SmallHills>0.2</SmallHills>
				<LargeHills>0.8</LargeHills>
				<Mountainous>1.5</Mountainous>
			</customHillinessCosts>
			<customRiverCosts AssignDefaults = "0.4"/>	
			<customTerrainCosts AllowTerrainWithTag = "Water" PathCost = "1">
				<li>
					<key>Mud</key>
					<value>1</value>
				</li>
			</customTerrainCosts> 
			<customBiomeCosts>
				<li>
					<key>Ocean</key>
					<value>4</value>
				</li>
				<li>
					<key>Lake</key>
					<value>4</value>
				</li>
			</customBiomeCosts>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 4)</li>
			</vehicleJobLimitations>
			<roles>
				<li>
					<key>driver</key>
					<label>driver</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>				
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
				</li>				
				<li>
					<key>gunner</key>
					<label>gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>			
					<handlingTypes>Turret</handlingTypes>
					<turretIds>
						<li>mainTurret</li>
					</turretIds>
				</li>
				<li>
					<key>passenger</key>
					<label>passenger</label>
					<slots>8</slots>
				</li>
			</roles>
		</properties>	
		<components>	<!-- 各種零件 -->
		<!-- Internal mobile Part 內部驅動部件-->
			<li><!--Engine 100-->
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<categories><li>MoveSpeed</li></categories>
				<depth>Internal</depth>		
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<maxHealth>0.3</maxHealth>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>			
				<hitbox>
					<cells>
						<li>(0, 2)</li>
						<li>(1, 2)</li>
					</cells>
				</hitbox>				
			</li>		
			<li><!-- fuel tank 100-->
				<key>FuelTank</key>
				<label>fuel tank</label>
				<health>100</health>
				<depth>Internal</depth>			
				<reactors><li Class = "Vehicles.Reactor_FuelLeak"/></reactors>			
				<hitbox>
					<cells>
						<li>(-1, -1)</li>
						<li>(1, -1)</li>
					</cells>
				</hitbox>
			</li>
			<li><!-- Gearbox 50-->
				<key>Gearbox</key>
				<label>gearbox</label>
				<health>50</health>
				<depth>Internal</depth>
				<categories><li>MoveSpeed</li></categories>	
				<hitbox><cells><li>(0, 1)</li></cells></hitbox>			
			</li>
			<li><!-- transmission shaft 40 -->
				<key>TransmissionShaft</key>
				<label>transmission shaft</label>
				<health>40</health>
				<depth>Internal</depth>
			</li>			
		<!-- External mobile Part 外部驅動部件-->		
			<li><!-- LeftTrack 150-->
				<key>LeftTrack</key>
				<label>left track</label>
				<health>150</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
			</li>
			<li><!-- RightTrack 150-->
				<key>RightTrack</key>
				<label>right track</label>
				<health>150</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>	
				<tags><li>Wheel</li></tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
			</li>
			<li><!-- LeftRoadWheels 100-->
				<key>LeftRoadWheels</key>
				<label>left road wheels</label>
				<health>100</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>				
				<tags><li>Wheel</li></tags>		
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
			</li>
			<li><!-- RightRoadWheels 100-->
				<key>RightRoadWheels</key>
				<label>right road wheels</label>
				<health>100</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>				
				<tags><li>Wheel</li></tags>		
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
			</li>
			<li><!-- LeftDriveSprocket 75-->
				<key>LeftDriveSprocket</key>
				<label>left drive sprocket</label>
				<health>75</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>				
				<tags><li>Wheel</li></tags>		
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells><li>(-1, 2)</li></cells><!--左前-->
				</hitbox>
			</li>
			<li><!-- RightDriveSprocket 75-->
				<key>RightDriveSprocket</key>
				<label>right drive sprocket</label>
				<health>75</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>				
				<tags><li>Wheel</li></tags>		
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells><li>(1, 2)</li></cells><!--右前-->
				</hitbox>
			</li>
			<li><!-- LeftTensionerWheel 75-->
				<key>LeftTensionerWheel</key>
				<label>left tensioner wheel</label>
				<health>75</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>				
				<tags><li>Wheel</li></tags>					
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells><li>(-1, -1)</li></cells><!--左後-->
				</hitbox>
			</li>
			<li><!-- RightTensionerWheel 75-->
				<key>RightTensionerWheel</key>
				<label>right tensioner wheel</label>
				<health>75</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>				
				<tags><li>Wheel</li></tags>				
				<hitbox>
					<fallthrough>false</fallthrough>
					<cells><li>(1, -1)</li></cells><!--右後-->
				</hitbox>
			</li>
		<!-- External Platings 外部防禦部件 -->
			<li><!-- FrontArmorPlating 200-->
				<key>FrontArmorPlating</key>
				<label>front armor Plating</label>
				<health>135</health>
				<depth>External</depth>
				<hitWeight>8</hitWeight>	
				<armor>
					<ArmorRating_Blunt>1.00</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
				</armor>		
				<hitbox><side>Front</side></hitbox>
			</li>
			<li><!-- LeftArmorPlating 180-->
				<key>LeftArmorPlating</key>
				<label>left armor plating</label>
				<health>122</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>		
				<armor>
					<ArmorRating_Blunt>0.7</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
				</armor>			
				<hitbox><side>Left</side></hitbox>
			</li>
			<li><!-- RightArmorPlating 180-->
				<key>RightArmorPlating</key>
				<label>right armor plating</label>
				<health>122</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>	
				<armor>
					<ArmorRating_Blunt>0.7</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
				</armor>			
				<hitbox><side>Right</side></hitbox>
			</li>
			<li><!-- RoofArmorPlating 150 -->
				<key>RoofArmorPlating</key>
				<label>roof armor plating</label>
				<health>135</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>
				<armor>
					<ArmorRating_Blunt>0.9</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
				</armor>
			</li>
			<li><!-- BackArmorPlating 150-->
				<key>BackArmorPlating</key>
				<label>rear armor plating</label>
				<health>101</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>
				<hitbox>
					<side>Back</side>
				</hitbox>
			</li>
		</components>
		<comps>
			<li Class="Motorization.CompProperties_VehicleCargo">
				<renderVehicle>true</renderVehicle>
			</li>
			<li Class="Motorization.CompProperties_TrailerMount">
				<!--north-->
				<!--east-->
				<!--south-->
				<!--west-->
				<!--northEast 45-->
				<!--southEast 135-->
				<!--southWest 225-->
				<!--northWest 315-->
				<rotationPivot>
					<li>(0.0,0,-1.75)</li>
					<li>(-1.85,0,0.0)</li>
					<li>(0.0,0,1.75)</li>
					<li>(1.85,0,0.0)</li>

					<li>(-1.2,0,-1.2)</li>
					<li>(-1.414,0,1.414)</li>
					<li>(1.414,0,1.414)</li>
					<li>(1.2,0,-1.2)</li>
				</rotationPivot>
			</li>
			<li Class="Vehicles.CompProperties_FueledTravel">	<!-- 油箱與油耗 -->
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>20</fuelConsumptionRate>
				<fuelConsumptionWorldMultiplier>1</fuelConsumptionWorldMultiplier>
				<fuelCapacity>100</fuelCapacity>
			</li>
			<li Class="Vehicles.CompProperties_VehicleTurrets">	<!-- 砲塔 -->
				<turrets>
					<li>
						<turretDef>RT_M2HB_MGTurret</turretDef>					
						<renderProperties>
							<north>(0, 1.5)</north>
							<south>(0, 0)</south>
							<east>(0.8, 0.9)</east>
							<west>(-0.8, 0.9)</west>
						</renderProperties>
                        <angleRestricted>(280,80)</angleRestricted>						
						<gizmoLabel>Main Turret</gizmoLabel>
						<aimPieOffset>(-0.1, 0)</aimPieOffset>	<!-- 預熱指示器的x,z偏移 -->
						<drawLayer>1</drawLayer>						
						<key>mainTurret</key>
					</li>
				</turrets>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>